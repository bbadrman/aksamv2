{% extends 'base.html.twig' %}

{% block title %}Payment index
{% endblock %}

{% block body %}
	<h1>Payment index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Client</th>
				<th>Frais</th>
				<th>Cotisation</th>
				<th>CreatAt</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for payment in payments %}
				<tr>
					<td>{{ payment.id }}</td>
					<td>{{ payment.contrat.nom  }}</td>
					<td>{{ payment.frais }}</td>
					<td>{{ payment.cotisation }}</td>
					<td>{{ payment.creatAt ? payment.creatAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_payment_show', {'id': payment.id}) }}">show</a>
						<a href="{{ path('app_payment_edit', {'id': payment.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_payment_new') }}">Create new</a>
{% endblock %}
