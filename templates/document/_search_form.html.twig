<div class="row align-items-center">


	<div class="col-md-5" style="padding-right: 2px;padding-left: 2px;">

		{{ form_row(search_form.contrat) }}
	</div>
	<div class="col-md-5" style="padding-right: 2px;padding-left: 2px;">

		{{ form_row(search_form.user) }}
	</div>


	<div class="col-md-2 text-center" style="padding-right: 3px;padding-left: 3px;">
