{% extends 'base.html.twig' %}

{% block title %}Ajouter un utilisateur - Aksam
{% endblock %}

{% block body %}

	<section class="content-header ">
		<h1>
			Utilisateurs
			<small>Gestion</small>
		</h1>
		<ol class="breadcrumb">
			<li>
				<a href="{{ path('app_user_index') }}">
					<i class="fa fa-users"></i>
					Tous les utilisateurs</a>
			</li>
			<li class="active">Ajouter un utilisateur</li>
		</ol>
	</section>

	<!-- FORM -->
	{% block form %}

		<div class="row mt ">
			<div class="col-lg-12">
				{{ include('user/_form.html.twig') }}
			</div>
		</div>

	{% endblock %}

	<!-- END FORM -->
{% endblock %}


{% block javascripts %}

	{{ parent() }}


	<script src='../js/ad.js'></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.min.js"></script>

	<script>

		$('.selectchoice').select2();
	</script>

	{# cet script permet de cacher le permission   "role_dev" dans le formulaire d'ajout d'utilisateur #}
	<script>
		document.addEventListener('DOMContentLoaded', function () {
document.querySelectorAll('.form-check-label').forEach(function (label) {
if (label.textContent.trim().toUpperCase() === 'DEV') {
const wrapper = label.closest('.col-md-3');
if (wrapper) 
wrapper.style.display = 'none';



}
});
});
	</script>

{% endblock %}
