<div class="form-panel">
	<h4 class="mb ">
		<i class="fa fa-plus-square-o"></i>
		{{ form_title|default('  Ajouter un utilisateur') }}
	</h4>

	{{ form_start(form, {'attr': {'class': 'form-horizontal style-form'}}) }}

	<div class="col-sm-2 col-sm-2 control-label"></div>
	<div class="col-sm-8">
		{% if not form.vars.valid %}
			<ul class="alert-danger">
				{% for child in form.children %}
					{% if child.vars.errors is defined %}
						{% for error in child.vars.errors %}
							<li>{{ error.message }}</li>
						{% endfor %}
					{% endif %}
				{% endfor %}
			</ul>
		{% endif %}
	</div>


	{# Form Sections #}


	<div class="form-group">
		<div class="col-sm-6">
			{{ form_row(form.username, {
                                label: 'Username: *',
                                attr: { class: 'form-control' }
                            }) }}
		</div>

	</div>

	<div class="form-group">
		<div class="col-sm-6">
			{{ form_row(form.password.first, {
                                label: 'Mot de passe: *',
                                attr: { class: 'form-control' }
                            }) }}
		</div>
		<div class="col-sm-6">
			{{ form_row(form.password.second, {
                                label: 'Confirmez le mot de passe: *',
                                attr: { class: 'form-control' }
                            }) }}
		</div>
	</div>

	{# Personal Info #}
	<div class="form-group">
		<div class="col-sm-6">
			{{ form_row(form.firstname, {
                                label: 'Prénom: *',
                                attr: { class: 'form-control' }
                            }) }}
		</div>
		<div class="col-sm-6">
			{{ form_row(form.lastname, {
                                label: 'Nom: *',
                                attr: { class: 'form-control' }
                            }) }}
		</div>
	</div>

	{# Professional Info #}
	<div class="form-group">
		<div class="col-sm-6">
			{{ form_row(form.embuchAt, {
                                label: 'Date d\'embauche:',
                                attr: { class: 'form-control' }
                            }) }}
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(form.remuneration, {
                                label: 'Rémunération:',
                                attr: { class: 'form-control' }
                            }) }}
                        </div>
                    </div>

                    {# Associations #}
                    <div class="form-group">
                        <div class="col-sm-6">
                            <div class="input-group">
                                {{ form_row(form.fonction, {
                                    label: 'Fonctions:',
                                    attr: { class: 'form-control' }
                                }) }}
                                
                            </div>
                        </div>
						<div class="col-sm-6">
                            <div class="input-group">
                                {{ form_row(form.status, {
                                    label: 'status:',
                                    attr: { class: 'form-control' }
                                }) }}
                                
                            </div>
                        </div>
						   
                    </div>

	 
	<div class="form-group">

		<div class="form-group col-sm-6">
			<label class="col-sm-4 col-sm-4 control-label">
				  Équipes:
			</label>
			<div class="col-sm-5">
				{{ form_widget(form.teams, {'attr': {'class': 'form-control'}}) }}
				
			</div>
			<a href="#" class="btn btn-primary" data-toggle="modal" data-target="#AddGroupeModal">+</a>

		</div>
		<div class="form-group col-sm-6">
			<label class="col-sm-4 col-sm-4 control-label">
				  Produits:
			</label>
			<div class="col-sm-5">
				{{ form_widget(form.products, {'attr': {'class': 'form-control'}}) }}
				
			</div>
			<a href="#" class="btn btn-primary" data-toggle="modal" data-target="#AddProductModal">+</a>

		</div>

	</div>
	<div class="form-group">
		<div class="form-group col-sm-12">
			<label class="col-sm-12 control-label mb-2 text-center">
				<h2>Les Permissions:</h2>
			</label>
			<div class="col-sm-12">
				{% for child in form.permissions %}
					<div class="col-md-3 mb-2">
						<div class="form-check">
							{{ form_widget(child, { 'attr': {'class': 'form-check-input'} }) }}
							{{ form_label(child, null, { 'attr': {'class': 'form-check-label'} }) }}
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>

	<div class="form-group  ">
	<div class="form-group col-sm-6">
		<div class="col-lg-offset-5 col-lg-12">
			<button class="btn btn-info">{{ button_label|default('Ajouter Utilisateur') }}</button>
		</div>
		</div>
	 <div class="form-group col-sm-6">
		<div class="col-lg-offset-5 col-lg-12">
			<button class="btn btn-theme" value="back" onclick="history.go(-1)">Retour</button>
		</div>
	</div>
	</div>
{{ form_rest(form) }}
{{ form_end(form) }}
</div>

{# # AddGroupeModal # #}
	<div class="modal fade" id="AddGroupeModal" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header modal-header-info">
					<h3 class="modal-title" id="exampleModalLabel">
						<i class="fa fa-plus-square-o"></i>
						Ajouter une equipe
					</h3>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">×</span>
					</button>
				</div>

				<div class="modal-body">
					<div class="form-horizontal style-form">
						<div class="form-group">
							<div class="col-sm-3 control-label"></div>
							<div class="col-sm-9">
								<ul id="saveform_errList"></ul>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-3 control-label">
								Equipe
								<span class="text-danger" style="font-size: 1.5em;">*</span>

							</label>
							<div class="col-sm-9">
								<input type="text" id="team_name" name="team[name]" required="required" placeholder="Merci de saisir le nom de l'équipe" class="name form-control">
							</div>
						</div>


						<div class="form-group">
							<label class="col-sm-3 control-label">
								Description
								<span class="text-danger"></span>
							</label>
							<div class="col-sm-9">
								<input type="text" id="team_description" name="team[description]" required="required" placeholder="Merci de saisir la description d'équipe" class="description form-control">
							</div>
						</div>

					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
					<button type="button" class="btn btn-primary team_new">Ajouter</button>
				</div>
			</div>
		</div>
	</div>
{# # END- AddGoupeModal # #}

	{# # AddProductModal # #}
	<div class="modal fade" id="AddProductModal" tabindex="-1" role="dialog" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header modal-header-info">
					<h3 class="modal-title" id="exampleModalLabel">
						<i class="fa fa-plus-square-o"></i>
						Ajouter Produit
					</h3>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">×</span>
					</button>
				</div>

				<div class="modal-body">
					<div class="form-horizontal style-form">
						<div class="form-group">
							<div class="col-sm-3 control-label"></div>
							<div class="col-sm-9">
								<ul id="saveform_errList"></ul>
							</div>
						</div>

						<div class="form-group">
							<label class="col-sm-3 control-label">
								Produit
								<span class="text-danger" style="font-size: 1.5em;">*</span>

							</label>
							<div class="col-sm-9">
								<input type="text" id="product_name" name="products[name]" required="required" placeholder="Merci de saisir le nom du produit" class="name form-control">
							</div>
						</div>


						<div class="form-group">
							<label class="col-sm-3 control-label">
								Description
								<span class="text-danger"></span>
							</label>
							<div class="col-sm-9">
								<input type="text" id="product_descrption" name="products[descrption]" required="required" placeholder="Merci de saisir la description du produit" class="description form-control">
							</div>
						</div>

					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
					<button type="button" class="btn btn-primary product_new">Ajouter</button>
				</div>
			</div>
		</div>
	</div>

	{# # END- AddProductModal # #}
