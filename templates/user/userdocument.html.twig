{% extends 'base.html.twig' %}

{% block title %}Tous les Utilisateurs
{% endblock %}

{% block stylesheets %}
	{{ parent()}}
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@0.5.3/dist/css/axentix.min.css">
	<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>

{% endblock %}
{% block body %}
	{% for label,  messages in app.flashes  %}
		<div class="container">
			<div class="alert alert-{{ label }}">
				{% for message in messages %}
					{{ message | raw }}
				{% endfor %}

			</div>
		</div>
	{% endfor %}

	<section class="content-header">
		<h1>
			Documents monqaunts
			<small>Gestion</small>
		</h1>
		<ol class="breadcrumb">
			<li>
				<a href="{{ path('app_home') }}">
					<i class="fa fa-dashboard"></i>
					Tableau de bord</a>
			</li>

		</ol>
		<br>

	</section>

	<div class="col-xs-12 mx-auto d-flex justify-content-center">

		<div class="row" style="margin-right: 12px;  ">{% include 'user/_search_form.html.twig'  %}
		</div>
	</div>
	<div class="row mt">
		<div class="col-lg-12">
			<div class="content-panel">

				<table class="table table-striped table-advance table-hover">
					<div class="row">
						<div class="col-xs-5">
							<h4>
								<i class="fa fa-list-ul"></i>
								Documents
								<small>monqaunts</small>
							</h4>
						</div>

					</div>
					<hr>
					<thead>
						<tr>
							<th>Equipe
							</th>
							<th>username
							</th>

							<th>contrats
							</th>
							<th>BulletinAdhesion</th>
							<th>MondatSepa</th>
							<th>conditionGeneral</th>
							<th>devoirConseil</th>
							<th>permis</th>
							<th>kbis</th>
							<th>releveInformation</th>
							<th>deviSigne</th>
							<th>CarteGriseDefinitive</th>
							<th>AtestNonAssure</th>
							<th>AtestNonSinist</th>
							<th>
								Actions
							</th>
						</tr>
					</thead>
					<tbody>
						{% if users %}
							{% for user in users %}
								{% for contrat in user.contrats %}
									<tr>
										<td>
											{% for team in user.teams %}
												{{ team }}<br>
											{% endfor %}
										</td>
										<td>
											{{ user.username }}
										</td>

										<td>
											{{ contrat.nom }}
										</td>
										<td>
											{% if contrat.document %}
												{{ contrat.document.bulletinAdhesion }}
											{% else %}
												<em>--</em>
											{% endif %}
										</td>
										<td>
											{% if contrat.document %}
												{{ contrat.document.mondatSepa }}
											{% else %}
												<em>--</em>
											{% endif %}
										</td>
										<td>
											{% if contrat.document %}
												{{ contrat.document.conditionGeneral }}
											{% else %}
												<em>--</em>
											{% endif %}
										</td>
										<td>
											{% if contrat.document %}
												{{ contrat.document.devoirConseil }}
											{% else %}
												<em>--</em>
											{% endif %}
										</td>
										<td>
											{% if contrat.document %}
												{{ contrat.document.permis }}
											{% else %}
												<em>--</em>
											{% endif %}
										</td>
										<td>
											{% if contrat.document %}
												{{ contrat.document.kbis }}
											{% else %}
												<em>--</em>
											{% endif %}
										</td>
										<td>
											{% if contrat.document %}
												{{ contrat.document.releveInformation }}
											{% else %}
												<em>--</em>
											{% endif %}
										</td>
										<td>
											{% if contrat.document %}
												{{ contrat.document.deviSigne }}
											{% else %}
												<em>--</em>
											{% endif %}
										</td>
										<td>
											{% if contrat.document %}
												{{ contrat.document.CarteGriseDefinitive }}
											{% else %}
												<em>--</em>
											{% endif %}
										</td>
										<td>
											{% if contrat.document %}
												{{ contrat.document.AtestNonAssure }}
											{% else %}
												<em>--</em>
											{% endif %}
										</td>
										<td>
											{% if contrat.document %}
												{{ contrat.document.AtestNonSinist }}
											{% else %}
												<em>--</em>
											{% endif %}
										</td>
									</tr>
								{% endfor %}
							{% endfor %}
						{% endif %}
						<td class="btn-toolbar"></td>

					</tbody>

				</table>


			{% endblock %}
			{% block javascripts %}
				{{ parent() }}

				<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
				{{ encore_entry_script_tags('app') }}
			{% endblock %}
