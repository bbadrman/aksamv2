{% extends 'base.html.twig' %}

{% block title %}Edit User
{% endblock %}
{% block stylesheets %}
	{{ parent()}}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.min.css"/>


{% endblock %}
{% block body %}

	<section class="content-header">
		<h1>
			Utilisateurs
			<small>Gestion</small>
		</h1>
		<ol class="breadcrumb">
			<li>
				<a href="{{ path('app_team_index') }}">
					<i class="fa fa-users"></i>
					Tous les utilisateur</a>
			</li>
			<li class="active">{{ user.username }}</li>
		</ol>
	</section>
	{% block form %}
		{% set form_title = 'Modifier ' ~ user.username %}
		<div class="row mt">
			<div class="col-lg-12">
				{{ include('user/_form.html.twig', {'button_label': 'Modifier',
                    'form_title': form_title}) }}

			</div>
		</div>
	{% endblock %}
{% endblock %}
