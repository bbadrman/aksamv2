{% extends 'base.html.twig' %}

{% block title %}UniteTravail index
{% endblock %}

{% block body %}
{% for label,  messages in app.flashes  %}
	<div class="container">
		<div class="alert alert-{{ label }}">
			{% for message in messages %}
				{{ message | raw }}
			{% endfor %}

		</div>
	</div>
{% endfor %}
<section class="content-header">
	<h1>
		Unités de travail
		<small>Gestion</small>
	</h1>
	<ol class="breadcrumb">
		<li>
			<a href="{{ path('app_home') }}">
				<i class="fa fa-dashboard"></i>
				Tableau de bord</a>
		</li>
		<li class="active">
			<a href="#">
				<i class="fa fa-users"></i>
				Toutes les unités de travail</a>
		</li>
	</ol>
	<br>

</section>
<div class="container">
	<a href="{{ path('app_unite_travail_new') }}" class="btn btn-primary">Ajouter Unité</a>
	<div class="row mt">
		<div class="col-lg-12">
			<div class="content-panel">
				<table class="table table-striped table-advance table-hover">
					<div class="row">
						<div class="col-xs-5">
							<h4>
								<i class="fa fa-list-ul"></i>
								Toutes les unités de travail
							</h4>
						</div>
						<div class="col-xs-5" style="float: right !important;">
							<div
								class="row" style="margin-right: 5px;">{# {% include 'user/_search_form.html.twig' with {search_form: search_form} only %} #}
							</div>
						</div>
					</div>

					<thead>
						<tr>
							<th>Id</th>
							<th>Nom</th>
							<th>Description</th>
							<th>Equipes</th>
							<th>actions</th>
						</tr>
					</thead>
					<tbody>
						{% for unite_travail in unite_travails %}
							<tr>
								<td>{{ unite_travail.id }}</td>
								<td>{{ unite_travail.nom }}</td>
								<td>{{ unite_travail.description }}</td>
								<td>
									{% for teams in unite_travail.teams %}
										{{ teams }}
										<br>
									{% endfor %}
								</td>
								<td>
									<a href="{{ path('app_unite_travail_show', {'id': unite_travail.id}) }}">show</a>
									<a href="{{ path('app_unite_travail_edit', {'id': unite_travail.id}) }}">edit</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="4">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<a href="{{ path('app_unite_travail_new') }}">
		<<--Retour</a></div> {% endblock %}
