{% extends 'base.html.twig' %}

{% block title %}Client
{% endblock %}

{% block body %}
	<h1>Client</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ client.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ client.nom }}</td>
			</tr>
			<tr>
				<th>Prenom</th>
				<td>{{ client.prenom }}</td>
			</tr>
			<tr>
				<th>Phone</th>
				<td>{{ client.phone }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ client.email }}</td>
			</tr>
			<tr>
				<th>RaisonSociale</th>
				<td>{{ client.raisonSociale }}</td>
			</tr>
			<tr>
				<th>Adress</th>
				<td>{{ client.adress }}</td>
			</tr>
			<tr>
				<th>CreatAt</th>
				<td>{{ client.creatAt ? client.creatAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ client.status }}</td>
			</tr>
			<tr>
				<th>Comment</th>
				<td>{{ client.comment }}</td>
			</tr>
			<tr>
				<th>UpdateAt</th>
				<td>{{ client.updateAt ? client.updateAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>IsModifie</th>
				<td>{{ client.isModifie ? 'Yes' : 'No' }}</td>
			</tr>
			<tr>
				<th>Forme Juridique</th>
				<td>{{ client.forceJuridique }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('client_index') }}">back to list</a>

	{% if  is_granted('ROLE_SUPER_ADMIN')   %}
		<a href="{{ path('app_client_edit', {'id': client.id}) }}">edit</a>
	{% endif %}


{% endblock %}
