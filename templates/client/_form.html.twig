<div class="container">
	<div class="card p-4">


		<div class="col-sm-8">
			{% if not form.vars.valid %}
				<ul class="alert-danger">
					{% for child in form.children %}
						{% if child.vars.errors is defined %}
							{% for error in child.vars.errors %}
								<li>{{ error.message }}</li>
							{% endfor %}
						{% endif %}
					{% endfor %}
				</ul>
			{% endif %}
		</div>
		{{ form_start(form) }}

		<div class="form-group row mb-4">
			<div class="col-sm-6">
				{{ form_widget(form.nom) }}
			</div>
			<div class="col-sm-6">
				{{ form_widget(form.prenom) }}
			</div>
		</div>
		<div class="form-group row mb-4">
			<div class="col-sm-6">
				{{ form_widget(form.phone) }}
			</div>
			<div class="col-sm-6">
				{{ form_widget(form.email) }}
			</div>
		</div>
		<div class="form-group row mb-4">


			<div class="col-sm-6">
				{{ form_widget(form.adress) }}
			</div>
			<div class="col-sm-6">
				{{ form_widget(form.raisonSociale) }}
			</div>
		</div>

		<div class="form-group row mb-4">

			<div class="col-sm-4">
				{{ form_widget(form.forceJuridique) }}
			</div>

			<div class="col-sm-2">
				{{ form_widget(form.status) }}
			</div>
			<div class="col-sm-6">
				{{ form_widget(form.comment) }}
			</div>
		</div>
	</div>
	<div class="text-center">
		<button class="btn btn-info">{{ button_label|default('Save') }}</button>
		<button class="btn btn-warning">
			<a href="{{ path('client_index') }}">Retour
			</a>
		</button>
	</div>
	{{ form_end(form) }}</div></div>
