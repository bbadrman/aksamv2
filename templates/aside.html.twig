{% if is_granted('IS_AUTHENTICATED_FULLY') %}

	{% set page = app.request.get('_route') %}


	<p class="centered">
		<a href="#">
			<img src=" {{ asset('../images/newLogo.jpg') }}" class="img-circle" width="80" alt="">
		</a>
	</p>

	<h5 class="centered">{{ app.user.username  }}</h5>
	<h5 class="centered">


		<p>
			{{ app.user.fonction  }}

		</p>

	</h5>

	{% for team in app.user.teams %}
		<h5 class="centered">{{  team  }}</h5>
	{% endfor %}
	<!-- DASHBOARD -->

	<li class="sub-menu">
		<a class="nav-link " href="#">
			<i class="fa fa-dashboard"></i>
			<span>Dashboard
			</span>
		</a>
	</li>

	<!-- END DASHBOARD -->


	<!-- Traitement Prospect -->
	{% if is_granted('ROLE_TRAITEMENT') == true %}

		<li class="sub-menu">
			<a class="nav-link " href="{{ path('app_traitement') }} ">
				<i class="fa-regular fa-gem"></i>
				<span>Traitement
				</span>
			</a>
		</li>
	{% endif %}
	<!-- END Traitement Prospect -->

	<!--  Stat -->
	{% if is_granted('ROLE_STATIQUE')  == true %}
		<li class="sub-menu">
			<a class="nav-link {% if page in ['dashboard', 'prospects_calandri' ] %}active{% endif %}" href="javascript:;">
				<i class="fa fa-pie-chart" aria-hidden="true"></i>
				<span>Statistique</span>
			</a>
			<ul class="sub">

				<li>
					<a class="nav-link " href="#">
						<i class="fa fa-calendar" aria-hidden="true"></i>
						<span>Stat Génerale
						</span>
					</a>
				</li>

				<li>
					<a class="nav-link " href="{{ path('app_home') }}">
						<i class="fa fa-line-chart" aria-hidden="true"></i>
						<span>Stat du jour
						</span>
					</a>
				</li>
			</ul>
		</li>
	{% endif %}
	<!-- END  Stat -->

	<!-- RH< -->
	{% if is_granted("ROLE_RH") == true %}
		<li class="sub-menu">
			<a class="nav-link {% if page in ['attributte_index', 'attributte_new', '#', '#'] %}active{% endif %}" href="javascript:;">
				<i class="fa fa-address-card"></i>
				<span>Gestion RH</span>
			</a>

			<ul class="sub">
				{% if is_granted('ROLE_ADD_RH') == true %}
					<li>
						<a href="#">Ajouter
						</a>
					</li>
				{% endif %}
				{% if is_granted('ROLE_EDIT_RH') == true %}
					<li>
						<a href="#">Gérer
						</a>
					</li>
				{% endif %}
			</ul>
		</li>
	{% endif %}
	<!-- END RH< -->


	<!-- Clients -->

	{% if is_granted('ROLE_CLIENT')  == true %}

		<li class="sub-menu">
			<a class="nav-link " href="{{path('client_index')}}">
				<i class="fa fa-diamond "></i>
				<span>Clients
				</span>
			</a>
		</li>
	{% endif %}

	<!-- END Clients -->


	<!-- Pramétres -->

	{% if is_granted('ROLE_PARAMETTRE')  == true %}
		<li class="sub-menu">

			<a class="nav-link {% if page in ['user_index', 'user_new', 'user_edit', 'user_show', 'app_team_new', 'app_team_index', 'app_team_show', 'app_team_edit', 'fonction_index', 'fonction_new', 'fonction_show', 'fonction_edit','app_product_index', 'app_product_new', 'app_product_show', 'app_product_edit'] %}active{% endif %}" href="javascript:;">
				<i class="fa fa-cogs"></i>
				<span>Paramettre</span>
			</a>

			<ul
				class="sub">

				<!-- USERS -->
				{% if is_granted('ROLE_GESTION_USER')  == true %}
					<li class="sub-menu">

						<a class="nav-link {% if page in ['app_user_index', 'app_user_new', 'user_edit', 'user_show'] %}active{% endif %}" href="javascript:;">
							<i class="fa fa-user-circle"></i>
							<span>Utilisateurs</span>
						</a>

						<ul class="sub">
							{% if is_granted('ROLE_AJOUT_USER')  == true %}
								<li>
									<a href="{{ path('app_user_new') }}">Ajouter un user</a>
								</li>
							{% endif %}
							<li>
								<a href="{{ path('app_user_index') }}">Gérer les Users</a>
							</li>
							{# <li>
																																																																																																																																																																																																																																																																																																																																																																																																																			<a href="{{ path('user_acces') }}">Gérer les Sessions</a>
																																																																																																																																																																																																																																																																																																																																																																																																																		</li> #}
						</ul>
					</li>

				{% endif %}
				<!-- END USERS -->

				<!-- Produits -->
				{% if is_granted('ROLE_PRODUIT')  == true %}
					<li class="sub-menu">
						<a class="nav-link {% if page in ['app_product_index', 'app_product_new', 'app_product_show', 'app_product_edit'] %}active{% endif %}" href="javascript:;">
							<i class="fa fa-product-hunt"></i>
							<span>Produits</span>
						</a>

						<ul class="sub">
							{% if is_granted('ROLE_AJOUT_PRODUIT')  == true %}
								<li>
									<a href="{{ path('app_product_new') }}">Ajouter un Produit</a>
								</li>
							{% endif %}
							<li>
								<a href="{{ path('app_product_index') }} ">Gérer les Produits</a>
							</li>
						</ul>
					</li>
				{% endif %}
				<!-- END Produits -->

				<!-- USERS -->
				{% if is_granted('ROLE_UNITE')  == true %}
					<li class="sub-menu">

						<a class="nav-link {% if page in ['app_user_index', 'app_user_new', 'user_edit', 'user_show'] %}active{% endif %}" href="javascript:;">
							<i class="fa fa-user-circle"></i>
							<span>Unite</span>
						</a>

						<ul class="sub">
							{% if is_granted('ROLE_AJOUT_UNITE')  == true %}
								<li>
									<a href="{{ path('app_unite_travail_new') }}">Ajouter unite
									</a>
								</li>
							{% endif %}
							<li>
								<a href="{{ path('app_unite_travail_index') }}">Gérer les Unites</a>
							</li>
							{# <li>
																																																																																																																																																																																																																																																																																																																																																																																																																			<a href="{{ path('user_acces') }}">Gérer les Sessions</a>
																																																																																																																																																																																																																																																																																																																																																																																																																		</li> #}
						</ul>
					</li>
				{% endif %}
				<!-- END USERS -->

				<!-- Equipe -->
				{% if is_granted('ROLE_EQUIPE')  == true %}
					<li class="sub-menu">
						<a class="nav-link {% if page in ['app_team_new', 'app_team_index', 'app_team_show', 'app_team_edit'] %}active{% endif %}" href="javascript:;">
							<i class="fa fa-users"></i>
							<span>Equipe</span>
						</a>

						<ul class="sub">
							{% if is_granted('ROLE_AJOUT_EQUIPE')  == true %}
								<li>
									<a href="{{ path('app_team_new') }}">Ajouter un Equipe</a>
								</li>
							{% endif %}
							<li>
								<a href="{{ path('app_team_index') }}">Gérer les Equipes</a>
							</li>
						</ul>
					</li>
				{% endif %}
				<!-- END Equipe -->
			</ul>
		</li>
	{% endif %}
	<!-- END Prammetre -->


	<!-- bibliothèque -->
	<li class="sub-menu">
		<a class="nav-link {% if page in ['red_bebltq', 'aide_show'  ] %}active{% endif %}" href="javascript:;">
			<i class="fa fa-tags"></i>
			<span>bibliothèque</span>
		</a>

		<ul class="sub">

			<li>
				<a class="nav-link " href="{{ path('red_bebltq') }}" target="_blank" rel="noopener noreferrer">
					<i class="fa fa-book" aria-hidden="true"></i>
					<span>Règles souscription
					</span>
				</a>
			</li>
			<li>
				<a class="nav-link " href="{{ path('bebltq_garage') }}" target="_blank" rel="noopener noreferrer">
					<i class="fa fa-book" aria-hidden="true"></i>
					<span>Souscription Garage
					</span>
				</a>
			</li>

			<li class="sub-menu">
				<a href="{{ path('aide_show') }}" target="_blank" rel="noopener noreferrer">
					<i class="fa fa-question-circle" aria-hidden="true" style="font-size: 20px;"></i>
					<span>Aide</span>
				</a>
			</li>
		</ul>
	</li>
	<!-- END bibliothèque -->
{% endif %}
