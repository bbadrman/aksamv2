{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<div class="login-area">
		<div class="container">
			<div class="login-box ptb--100">
				{{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
				{% if not registrationForm.vars.valid %}
					<ul class="alert-danger">
						{% for child in registrationForm.children %}
							{% if child.vars.errors is defined %}
								{% for error in child.vars.errors %}
									<li>{{ error.message }}</li>
								{% endfor %}
							{% endif %}
						{% endfor %}
					</ul>
				{% endif %}
				{% if success_message %}
					<div class="alert alert-success">
						{{ success_message }}<br>
						<a href="{{ path('app_login') }}">
							<span class="fa fa-sign-in"></span>
							Connexion</a>
					</div>
				{% endif %}
				<div class="login-form-head">
					<h4>Sign up</h4>
					<p>Enregistrer un compte</p>

				</div>

				<div class="login-form-body">


					<div class="form-gp">

						{{ form_label(registrationForm.username) }}</br>
					<i class="fa fa-user" aria-hidden="true"></i>
					{{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}

					<div class="text-danger"></div>
				</div>

				<div class="form-gp">
					{{ form_label(registrationForm.firstname) }}</br>
				<i class="far  fa-user-plus"></i>
				{{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control'}}) }}
				<i class="ti-email"></i>
				<div class="text-danger"></div>
			</div>

			<div class="form-gp">
				{{ form_label(registrationForm.lastname) }}</br>
			<i class="fal fa-users"></i>
			{{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control'}}) }}
			<i class="ti-email"></i>
			<div class="text-danger"></div>
		</div>

		<div class="form-gp">
			{{ form_label(registrationForm.password.first) }}</br>
		<i class="fa fa-unlock" aria-hidden="true"></i>
		{{ form_widget(registrationForm.password.first, {'attr': {'class': 'form-control'}}) }}
		<i class="ti-lock"></i>
		<div class="text-danger"></div>
	</div>

	<div class="form-gp">
		{{ form_label(registrationForm.password.second) }}</br>
	<i class="fa fa-unlock" aria-hidden="true"></i>
	{{ form_widget(registrationForm.password.second, {'attr': {'class': 'form-control'}}) }}
	<i class="ti-lock"></i>
	<div class="text-danger"></div>
</div>
<div class="submit-btn-area">


	{{ form_row(registrationForm.submit, {'attr': {'class': 'btn btn-theme'}}) }}</div><hr><div class="form-footer text-center mt-5">
	<p class="text-center text-muted">
		Déjà enregistré ?
		<a class="btn btn-theme" href="{{ path('app_login') }}">Login</a>
	</p>
	{{ form_rest(registrationForm) }}
	{{ form_end(registrationForm) }}
</div></div>{% endblock %}
