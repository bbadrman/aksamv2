{% extends 'base.html.twig' %}

{% block title %}Liste des Produits
{% endblock %}

{% block body %}
	{% for label,  messages in app.flashes  %}
		<div class="container">
			<div class="alert alert-{{ label }}">
				{% for message in messages %}
					{{ message | raw }}
				{% endfor %}

			</div>
		</div>
	{% endfor %}
	<section class="content-header">
		<h1>
			Produits
			<small>Gestion</small>
		</h1>
		<ol class="breadcrumb">
			<li>
				<a href="{{ path('app_home') }}">
					<i class="fa fa-dashboard"></i>
					Tableau de bord</a>
			</li>
			<li class="active">
				<a href="{{ path('app_product_index') }}">
					<i class="fa fa-users"></i>
					Tous les produits</a>
			</li>
		</ol>
		<br>

	</section>
	<div class="container">
		<a href="{{ path('app_product_new') }}" class="btn btn-primary">Ajouter produit</a>
		<div class="row mt">
			<div class="col-lg-12">
				<div class="content-panel">
					<table class="table table-striped table-advance table-hover">
						<div class="row">
							<div class="col-xs-5">
								<h4>
									<i class="fa fa-list-ul"></i>
									tous les produits
								</h4>
							</div>
							<div class="col-xs-5" style="float: right !important;">
								<div
									class="row" style="margin-right: 5px;">{# {% include 'user/_search_form.html.twig' with {search_form: search_form} only %} #}
								</div>
							</div>
						</div>
						<thead>
							<tr>
								<th>Id</th>
								<th>Nom</th>
								<th>Description</th>
								{# <th>Unite</th> #}
								<th>Utilisateurs</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for product in products %}
								<tr>
									<td>{{ product.id }}</td>
									<td>{{ product.nom }}</td>
									<td>{{ product.description }}</td>
									<td>

										{% for userprodu in product.users %}
											{{ userprodu.username }}
											<br>
										{% endfor %}
									</td>
									<td>
										<a href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
										<a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
										<button>
											{% set form_title = '<i class="fa fa-trash"></i>' %}
											{{ include('product/_delete_form.html.twig', {
                                                    'form_title': form_title
                                                                           }) }}</button>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="4">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

				</div>
			</div>
		</div>
	</div>

{% endblock %}
