{% extends 'base.html.twig' %}

{% block title %}Recherche par dates
{% endblock %}

{% block body %}
	<div class="container  mt-4">

		<h1 class="mb-4">Recherche par dates</h1>

		<div class="card">
			<div class="card-header">
				<h5>Sélectionnez une période</h5>
			</div>
			<div class="card-body">
				{{ form_start(search_form, {'attr': {'class': 'row g-3'}}) }}
				<div class="col-md-5">
					{{ form_row(search_form.startDate, {'label': 'Date de début', 'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="col-md-5">
					{{ form_row(search_form.endDate, {'label': 'Date de fin', 'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="col-md-2 d-flex align-items-end">
					<button type="submit" class="btn btn-primary w-100">
						<i class="fas fa-search"></i>
						Rechercher
					</button>
				</div>
				{{ form_end(search_form) }}
			</div>
		</div>

		{% if showButtons %}
			<div class="row mt-4">
				<div class="col-12 text-center">
					<h4>Veuillez sélectionner une table à afficher</h4>
				</div>
			</div>
			<div
				class="row mt-3">
				{# <div class="col-md-4">
																	<a href="{{ path('app_prospectstats', {'startDate': startDate, 'endDate': endDate}) }}" class="btn btn-success btn-lg w-100">
																		<i class="fas fa-users"></i>
																		PROSPECTS
																	</a>
																</div> #}
				<div class="col-md-6">
					<a href="{{ path('app_contrats', {'startDate': startDate, 'endDate': endDate}) }}" class="btn btn-success btn-lg w-100">
						<i class="fas fa-users"></i>
						PRODUCTION
					</a>
				</div>
				<div class="col-md-6">
					<a href="{{ path('prospects_calandri', {'startDate': startDate, 'endDate': endDate}) }}" class="btn btn-info btn-lg w-100">
						<i class="fas fa-file-contract"></i>
						STATISTIQUE
					</a>
				</div>
			</div>
		{% endif %}
	</div>
{% endblock %}
