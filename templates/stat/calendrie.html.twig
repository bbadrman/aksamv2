			<script>
$(document).ready(function () {
    // Hide all rows comercials
    $('.expandable-row').click(function () {
        $('.expanded-content').not($(this).nextAll('.expanded-content')).hide();
        $(this).nextUntil('.expandable-row').toggle();
    });
    
    // Hide all expanded content on page load
    $('.expanded-content').hide();
});

// Bouton "Saisir" - Affiche Motive de saisir et cache Type Prospect
document.getElementById('toggleColumns').addEventListener('click', function () {
    const extraCols = document.querySelectorAll('[data-col="extra"]');
    const typeProspectCols = document.querySelectorAll('[data-col="type-prospect"]');
    
    // Toggle les colonnes Motive de saisir
    extraCols.forEach(col => {
        col.style.display = (col.style.display === 'none' || col.style.display === '') ? 'table-cell' : 'none';
    });
    
    // Si on affiche Motive, on cache Type Prospect
    const isExtraVisible = extraCols[0].style.display === 'table-cell';
    typeProspectCols.forEach(col => {
        col.style.display = isExtraVisible ? 'none' : 'table-cell';
    });
});

// Bouton "Professionel" - Affiche Activites et cache Source
document.getElementById('toggleColumnsActivite').addEventListener('click', function () {
    const activitesCols = document.querySelectorAll('[data-col="activites"]');
    const sourceCols = document.querySelectorAll('[data-col="source"]');
    
    // Toggle les colonnes Activites
    activitesCols.forEach(col => {
        col.style.display = (col.style.display === 'none' || col.style.display === '') ? 'table-cell' : 'none';
    });
    
    // Si on affiche Activites, on cache Source
    const isActivitesVisible = activitesCols[0].style.display === 'table-cell';
    sourceCols.forEach(col => {
        col.style.display = isActivitesVisible ? 'none' : 'table-cell';
    });
});
</script>

