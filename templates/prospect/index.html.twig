{% extends 'base.html.twig' %}

{% block title %}Prospect index{% endblock %}

{% block body %}
    <h1>Prospect index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Gender</th>
                <th>City</th>
                <th>Adress</th>
                <th>BrithAt</th>
                <th>Source</th>
                <th>TypeProspect</th>
                <th>RaisonSociale</th>
                <th>CodePost</th>
                <th>Gsm</th>
                <th>Assurer</th>
                <th>LastAssure</th>
                <th>MotifResil</th>
                <th>MotifSaise</th>
                <th>Url</th>
                <th>SecdEmail</th>
                <th>CreatAt</th>
                <th>Activites</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prospect in prospects %}
            <tr>
                <td>{{ prospect.id }}</td>
                <td>{{ prospect.nom }}</td>
                <td>{{ prospect.prenom }}</td>
                <td>{{ prospect.phone }}</td>
                <td>{{ prospect.email }}</td>
                <td>{{ prospect.gender }}</td>
                <td>{{ prospect.city }}</td>
                <td>{{ prospect.adress }}</td>
                <td>{{ prospect.brithAt ? prospect.brithAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ prospect.source }}</td>
                <td>{{ prospect.typeProspect }}</td>
                <td>{{ prospect.raisonSociale }}</td>
                <td>{{ prospect.codePost }}</td>
                <td>{{ prospect.gsm }}</td>
                <td>{{ prospect.assurer }}</td>
                <td>{{ prospect.lastAssure }}</td>
                <td>{{ prospect.motifResil }}</td>
                <td>{{ prospect.motifSaise }}</td>
                <td>{{ prospect.url }}</td>
                <td>{{ prospect.secdEmail }}</td>
                <td>{{ prospect.creatAt ? prospect.creatAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ prospect.activites }}</td>
                <td>
                    <a href="{{ path('app_prospect_show', {'id': prospect.id}) }}">show</a>
                    <a href="{{ path('app_prospect_edit', {'id': prospect.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="23">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_prospect_new') }}">Create new</a>
{% endblock %}
